{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "incremental": true,
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "types": ["node", "amqplib"]
    },
    "include": ["src/**/*", "src/messaging"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
