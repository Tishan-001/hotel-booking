{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "incremental": true,
        "tsBuildInfoFile": "./.tsbuildinfo"
    },
    "references": [
        { "path": "./api-gateway" },
        { "path": "./auth-service" },
        { "path": "./user-service" },
        { "path": "./hotel-service" },
        { "path": "./booking-service" },
        { "path": "./shared-types" }
    ],
    "files": [],
    "include": [],
    "exclude": [
        "node_modules",
        "dist",
        "**/dist",
        "**/node_modules",
        "**/*.test.ts",
        "**/__tests__"
    ]
}

